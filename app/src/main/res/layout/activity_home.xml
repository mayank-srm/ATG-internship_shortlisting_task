<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/stranger_things"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_below="@+id/image"
        android:text="hiii"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_centerInParent="true"
        tools:ignore="HardcodedText" />
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="200dp"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar_icon"
        android:id="@+id/edit_left"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:id="@+id/edit_right"
        android:src="@drawable/google_play_icon"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:ignore="ContentDescription" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:paddingStart="40dp"
        android:hint="Typing..."
        android:gravity="start"
        android:layout_alignParentBottom="true"
        android:ems="10"
        tools:ignore="HardcodedText,RtlSymmetry,TextFields"
        android:importantForAutofill="no" />
</RelativeLayout>

</RelativeLayout>